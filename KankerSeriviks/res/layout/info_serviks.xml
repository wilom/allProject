<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Info Kanker Serviks" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/namaInfo"
        android:src="@drawable/serviks" />

     <ScrollView
         android:id="@+id/scrollView1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/imageView1"
         android:background="#995050"
         android:overScrollMode="always"
         android:scrollbars="vertical" >

         <TextView
             android:id="@+id/isiinfo"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/infoServiks" />
     </ScrollView>

     <TextView
         android:id="@+id/namaInfo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/kembaliInfo"
         android:text="TextView" />

     <Button
         android:id="@+id/kembaliInfo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/textView1"
         android:text="@string/kembaliInfo" />

</RelativeLayout>
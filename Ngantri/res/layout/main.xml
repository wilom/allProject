<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noAntri"
            android:id="@+id/noAntri"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            android:textSize="100sp" android:textStyle="bold" android:textColor="#ffff8808"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnNo"
            android:id="@+id/btnNo" android:layout_below="@+id/noAntri" android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp" android:textStyle="bold|italic"
            android:textSize="30sp"/>
</RelativeLayout>

